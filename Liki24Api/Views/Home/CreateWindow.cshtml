<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $("#custom-form").submit(function () {
        event.preventDefault();

        var Name = $("#Name").val();
        var Description = $("#Description").val();
        var Start = $("#Start").val();
        var Finish = $("#Finish").val();
        var HourStart = $("#HourStart").val();
        var HouFinish = $("#HouFinish").val();
        var AvailableBefore = $("#AvailableBefore").val();
        var Price = $("#Price").val();
        var Type = $("#Type").val();

        var url = "http://localhost:61711/api/values";
        var myData = {};
        myData.Name = Name;
        myData.Description = Description;
        myData.Start = Start;
        myData.Finish = Finish;
        myData.HourStart = HourStart;
        myData.HouFinish = HouFinish;
        myData.AvailableBefore = AvailableBefore;
        myData.Price = Price;
        myData.Type = Type;

        $.ajax({
            url: "api/values",
            type: "POST",
            dataType: 'json',
            data: myData,
            success: function (data) {
                alert("WINDOW CREATED!  ");

            },
            error: function (error) {
                alert("LOST"+ error);
                console.log(error);
            }

        });

    });
</script>

